<div class="row" style="margin-top:90px;">
	<div class="col-md-6 col-md-offset-3">
	</div>
	<div class="col-md-6 col-md-offset-3">
		<center>
			<% if notice %>
				<p style="color:red;"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p style="color:red;"><%= alert %></p>
			<% end %>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div style="width:250px"><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true ,:style=>'width:250px;'%></div>

			  <div style="margin-top:20px;"><%= f.label :password %><br/>
			  <%= f.password_field :password,:style=>'width:250px;' %></div>
			  <br>
			  <div style="margin-top:20px;" ><%= f.submit "Sign in",  :class => 'btn btn-primary', :style => 'background-color:#113184;' %></div>
			<% end %>
		</center>		
	</div>
</div>
