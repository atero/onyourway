<div class="pass_background" >
  <div class="section1">
    <div class="container" style="max-width: 640px;margin: auto;">
      <img style="display: block; margin: auto; padding-top: 25px;"
        src="https://s3.eu-central-1.amazonaws.com/oywuploads/newsletter-logo.png" alt="On Your Way"/>
    </div>
  </div>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <div class="section4">
    <div class="container" style="max-width: 640px;margin: auto;">
      <footer style="margin: 0;">
        <div class="orange" style="height: 15px;background-color: #fde53a;"></div>
        <div class="blue" style="height: 30px;background-color: #10e8dd;"></div>
      </footer>
    </div>
  </div>
</div>
