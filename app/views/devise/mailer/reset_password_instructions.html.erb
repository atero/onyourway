<body style="font-family: Arial,sans-serif;text-align: left;">
  <div class="section1">
    <div class="container" style="max-width: 640px;margin: auto;">
      <img style="display: block; margin: auto; padding-top: 25px;"
        src="https://s3.eu-central-1.amazonaws.com/oywuploads/newsletter-logo.png" alt="On Your Way"/>
    </div>
  </div>
  <div class="section2">
    <div class="container" style="max-width: 640px;margin: auto;">
      <p style="text-align: left;color: #969696;font-size: 15.69px;">Hello <%= @resource.email %>!</p>

      <p style="text-align: left;color: #969696;font-size: 15.69px;">You have asked for a password reset </p>

      <p style="text-align: left;color: #969696;font-size: 15.69px;"><%= link_to 'Change my password', edit_password_url(@resource, reset_password_token: @token) %></p>

      <p style="text-align: left;color: #969696;font-size: 15.69px;">If you didn't request this, please ignore this email.</p>
      <p style="text-align: left;color: #969696;font-size: 15.69px;">Your password won't change until you access the link above and create a new one.</p>
    </div>
  </div>
  <div class="section3">
    <div class="container" style="max-width: 640px;margin: auto;">
      <p class="info-details" style="font-size: 8.6px; color: #646464; display:block; margin-bottom: 10px; text-align:center">On Your Way SAS, 12 Masseran st., Paris, 75007, France Tel: +33678124124 /
        <a href="mailTo:support@oyw.com" style="color: gray;">support@onyourway.io</a>
      </p>
    </div>
  </div>

  <div class="section4">
    <div class="container" style="max-width: 640px;margin: auto;">
      <footer>
        <div class="orange" style="height: 15px;background-color: #fde53a;"></div>
        <div class="blue" style="height: 30px;background-color: #10e8dd;"></div>
      </footer>
    </div>
  </div>
</body>
